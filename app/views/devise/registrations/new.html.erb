<!-- Sign up form -->
<div class="main top-content">
    <section class="signup">
        <div class="container container-registration">
            <div class="signup-content">
                <div class="signup-form">
                    <h2 class="form-title">Sign up</h2>
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                        <%= bootstrap_devise_error_messages! %>

                        <div class="form-group">
                            <label for="name"><i class="fa fa-pencil"></i></label>
                            <%= f.text_field :username, placeholder: "User Name For Website" %>
                        </div>

                        <div class="form-group">
                            <label for="name"><i class="fa fa-user"></i></label>
                            <%= f.text_field :name, placeholder: "Full Name" %>
                        </div>
                        <div class="form-group">
                            <label for="email"><i class="fa fa-envelope"></i></label>
                            <%= f.email_field :email, autocomplete: 'email', placeholder: "Your Email" %>
                        </div>
                        <div class="form-group">
                            <label for="pass"><i class="fa fa-lock"></i></label>
                            <%= f.password_field :password, autocomplete: 'current-password', id: 'your_pass',class: 'your_pass', placeholder: "Password" %>
                        </div>
                        <div class="form-group">
                            <label for="re-pass"><i class="fa fa-get-pocket"></i></label>
                            <%= f.password_field :password_confirmation, autocomplete: 'current-password', placeholder: "Repeat Password" %>
                        </div>
                        <div class="form-group form-button">
                            <%= f.submit t('.sign_up'), class: 'btn btn-block form-submit' %>
                        </div>
                    <% end %>
                </div>
                <div class="signup-image">
                    <figure><img src="<%= asset_path('signup-image.png') %>" alt="sing up image"></figure>
                    <%= render 'devise/shared/links' %>
                </div>
            </div>
        </div>
    </section>
</div>