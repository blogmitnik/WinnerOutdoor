<!-- Forgot password form -->
<div class="main top-content">
    <section class="signup">
        <div class="container container-registration">
            <div class="signup-content">
                <div class="signup-form">
                    <h2 class="form-title"><%= t('.forgot_your_password') %></h2>
                    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                    	<%= bootstrap_devise_error_messages! %>

                        <div class="form-group">
                            <label for="email"><i class="fa fa-envelope"></i></label>
                            <%= f.email_field :email, autocomplete: 'email', placeholder: "Your Account Email" %>
                        </div>
                        <div class="form-group">
							<%= f.submit "Send me instructions", class: 'btn btn-block form-submit' %>
						</div>
                    <% end %>
                </div>
                <div class="signup-image">
                    <figure><img src="<%= asset_path('reset-password.png') %>" alt="reset password"></figure>
                    <%= render 'devise/shared/links' %>
                </div>
            </div>
        </div>
    </section>
</div>
